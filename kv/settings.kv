<SettingsButton@Button>:
	font_size:30
	#background_normal:''
	#background_color:'A0A0A0'
	background_normal: ''
	background_color: '#c40e25'
	size_hint:1,1
	pos_hint: {'center_x':.5, 'center_y':.5} 
	
ShowcaseScreen:
    name: 'settings'
    #fullscreen: True
	
    BoxLayout:
		orientation: "vertical"
		padding:80
		spacing:50

        SettingsButton:
            text: l._('Instrument Settings')
            on_release: on_press:app.go_screen('Instrument')
		
		SettingsButton:
            text: 'Blue Led Test'
            on_release:app.blue_led_test() 
			
		SettingsButton:
            text: 'Red Led Test'
            on_release:app.red_led_test() 
			
