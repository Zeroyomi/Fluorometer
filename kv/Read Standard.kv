ShowcaseScreen:
    name: 'Standard'
    fullscreen: True
	BoxLayout:
		orientation: "vertical"
		padding:10
		spacing:20
		BoxLayout:	
			orientation: "vertical"
			size_hint:1,0.8
			Label:
				id:DNA_type
				text:app.DNA_type
				color: '#c40e25'
				font_size:24
			
			Label:
				text:"Please insert standard 1"
				font_size:36	
				color: '#c40e25'
 
		BoxLayout:	
			size_hint:1,0.2
			spacing:40
			padding:20
			orientation: "horizontal"
			Button:
				text:"Cancel"
				font_size:20
				background_normal: ''
				background_color: '#c40e25'
				on_release:app.go_previous()
				
			Button:
				text:"Read Standard 1"
				font_size:20
				background_normal: ''
				background_color: '#c40e25'
				on_release:
					app.read_AccuClear_standard_1() if app.DNA_type == 'AccuClear' else \ 
					app.read_AccuGreen_standard_1()
		
		