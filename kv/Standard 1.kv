ShowcaseScreen:
    name: 'Standard 1'
    fullscreen: True
	BoxLayout:
		orientation: "vertical"
		padding:10
		spacing:20
		BoxLayout:	
			spacing:20
			padding:20
			orientation: "vertical"
			size_hint:1,0.2
			Label:
				size_hint:1,0.3
				id:DNA_type
				text:app.DNA_type
				color: '#c40e25'
				font_size:24
			Label:
				size_hint:1,0.3
				text:"Please insert standard 2"
				font_size:24	
				color: '#c40e25'
			BoxLayout:
				size_hint:1,0.4
				orientation:"horizontal"
				Label:
					text_size: self.size
					halign:'left'
					valign: 'middle'
					font_size:20	
					color: '#c40e25'
					text:'Std1'
					
				Label:
					text_size: self.size
					halign:'left'
					valign: 'middle'
					font_size:20	
					color: '#c40e25'
					#text:app.DNA_standard_1
					text:'50'

				Label:
					text_size: self.size
					halign:'right'
					valign: 'middle'
					font_size:20	
					color: '#c40e25'
					text:''
				Label:
					text_size: self.size
					halign:'right'
					valign: 'middle'
					font_size:20	
					color: '#c40e25'
					#text:app.DNA_standard_1
					text:''
			
		#Graph:
			#id: plot_dna
			#size_hint_x:.6
			#pos_hint:{"x":.2}
            #xlabel: "Omec tube concentration(Î¼g/mL)"
            #ylabel: "RFUs"
			#x_ticks_minor:5
			#x_ticks_major:100
			#y_ticks_major:50
			#y_grid_label:False
			#x_grid_label:True
			#padding:5
			#x_grid:True
			#y_grid:False
			#xmin:0
			#xmax:600
			#ymin:0 
			#ymax:200	
		
		BoxLayout:
			id:table_dna
			size_hint:1,0.65
			
		BoxLayout:	
			size_hint:1,0.15
			spacing:40
			padding:20
			orientation: "horizontal"
			Button:
				text:"Cancel"
				font_size:20
				background_normal: ''
				background_color: '#c40e25'
				on_release:app.go_previous()
				
			Button:
				text:"Read Standard 2"
				font_size:20
				background_normal: ''
				background_color: '#c40e25'
				on_release:
					app.read_AccuClear_standard_2() if app.DNA_type == 'AccuClear' else \ 
					app.read_AccuGreen_standard_2()
			
		
		