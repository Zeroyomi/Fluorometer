
#:import Factory kivy.factory.Factory

<ShowcaseScreen>:
    ScrollView:
        do_scroll_x: False
        do_scroll_y: False if root.fullscreen else (content.height > root.height - dp(16))
        AnchorLayout:
            size_hint_y: None
            height: root.height if root.fullscreen else max(root.height, content.height)
            GridLayout:
                id: content
                cols: 1
                spacing: '8dp'
                padding: '8dp'
                size_hint: (1, 1) if root.fullscreen else (.8, None)
                height: self.height if root.fullscreen else self.minimum_height


	
BoxLayout:
    orientation: 'vertical'

    canvas.before:
        Color:
            rgb: .6, .6, .6
        Rectangle:
            size: self.size
            source: 'background_b.png'
	
	FloatLayout:
		size_hint: 1, None
        height: 64
		
		
		
		Label:
			id:main_label
			pos:(0, root.height - self.height)
			text:"Choose an assay"
			#size_hint: (1, 0.2)
			font_size:48
			background_color:(.4,.4,.4,1)
			canvas.before:
				Color:
					rgba:self.background_color
				Rectangle:
					size: self.size
					pos: self.pos
            
		Button:
			id:back_btn
			background_normal:'chevron-left.png'
			pos:(0, root.height - self.height)
			size_hint: (None, None)
			size:64,64
			disabled:False
   

    ScreenManager:
        id: sm
        on_current_screen:
            
	GridLayout:
		cols:2
		size_hint:(1,0.2)
		
		Button:
			
			id:home
			
			text:"Menu"
			font_size:36
			on_release:app.go_home()
		Button:
			
			id:set
			text:"Settings"
			font_size:36
			on_release:app.go_screen('settings')